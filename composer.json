{
    "name": "katsana/minions",
    "description": "JSON-RPC Communication for Laravel",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "KATSANA Developer",
            "email": "developer@katsana.com"
        },
        {
            "name": "Mior Muhammad Zaki",
            "email": "crynobone@katsana.com",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Minions\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Minions\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.2",
        "datto/json-rpc": "^5.0 || ^6.0",
        "illuminate/console": "^5.8 || ^6.0",
        "illuminate/contracts": "^5.8 || ^6.0",
        "illuminate/database": "^5.8 || ^6.0",
        "illuminate/pipeline": "^5.8 || ^6.0",
        "illuminate/support": "^5.8 || ^6.0",
        "illuminate/validation": "^5.8 || ^6.0",
        "laravie/codex-security": "^1.0",
        "laravie/stream": "^1.0",
        "react/event-loop": "^1.1",
        "react/promise": "^2.5"
    },
    "require-dev": {
        "clue/block-react": "^1.3",
        "clue/buzz-react": "^2.5",
        "mockery/mockery": "^1.3",
        "orchestra/testbench": "^3.8 || ^4.0",
        "phpunit/phpunit": "^8.4",
        "react/http": "^0.8.4"
    },
    "suggest": {
        "clue/block-react": "Allow to use traditional, blocking environment with Minions (^1.3).",
        "clue/buzz-react": "Allow to use Minions as JSON-RPC Client (^2.5).",
        "react/http": "Allow to use Minions as JSON-RPC Server (^0.8.4)."
    },
    "scripts": {
        "test": [
            "./vendor/bin/phpunit -c ."
        ]
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Minions\\MinionsServiceProvider",
                "Minions\\Server\\MinionsServiceProvider"
            ],
            "aliases": {
                "Minion": "Minions\\Minion"
            }
        }
    },
    "minimum-stability": "dev"
}
